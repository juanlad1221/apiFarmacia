<h1 class="font-1" style="text-align: center; color:gray;">LOGIN</h1>

<div class="container d-flex justify-content-center">

    <div class="form-group p-4" style="width: 30%; background:#A4A4A4; border-radius: 2%;">
        <form action="/login" method="POST">
            <input type="text" name="user" class="form-control" placeholder="User" id="user">
            <input type="password" name="pass" class="form-control mt-2" placeholder="Password" id="password">
            <br>
            <button class="btn btn-secondary btn-block" id="btn">Enviar</button>
        </form>
    </div>

</div>

<%- include('block_end') %>

<style>
    .bt {
        border: 1px solid blue;
    }
</style>

<script>
    let btn = document.getElementById('btn');
    let user = document.getElementById('user');
    let pass = document.getElementById('password')

    user.onclick = () => {
        user.value = ''
    }
    pass.onclick = () => {
        pass.value = ''
    }

    btn.onclick = () => {
        let user = document.getElementById('user').value;
        let pass = document.getElementById('password').value

        if (user == '' || user == ' ' || user == null) { alert('Error: El Campo NO puede estar vacio'); return false }
        if (pass == '' || pass == ' ' || pass == null) { alert('Error: El Campo NO puede estar vacio'); return false }
    }



</script>